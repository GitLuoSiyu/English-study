.productItem {
  display: flex;
  flex-direction: column;
  position: relative;
  margin: 10rpx 0;
}

.main-img {
  width: 320rpx;
  height: 300rpx;
}

.main-img image {
  width: 100%;
  height: 100%;
}

.name {
  width: 320rpx;
  font-size: 26rpx;
  display: -webkit-box;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-top:8rpx;
}

.price {
  font-weight: bold;
  font-size: 30rpx;
}
