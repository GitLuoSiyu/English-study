.footer {
  width: 100%;
  height: 105rpx;
  background: white;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
}

.footer-index {
  font-size: 23rpx;
  width: 14%;
  text-align: center;
  margin-top: 22rpx;
  position: relative;
}

