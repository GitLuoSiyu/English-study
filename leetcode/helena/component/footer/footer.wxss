  height: 30rpx;
  width: 30rpx;
}

.footer-index text {
  font-size: 18.26rpx;
  color: #fff;
  background: #de443c;
  position: absolute;
  top: -17rpx;
  right: 1px;
  /* padding: 5rpx 10rpx; */
  line-height: 30rpx;
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
  box-sizing: border-box;
}

