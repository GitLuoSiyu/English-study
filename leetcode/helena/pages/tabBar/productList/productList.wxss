.tab-h {
  height: 100rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #000;
  font-size: 16px;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  padding-bottom: 4rpx;
}

.tab-item {
  font-size: 28rpx;
  color: #fff;
  border-bottom: solid 10rpx #000;
  margin: 0 20rpx;
  display: inline-block;
}

.tab-content{
  width: 100%;
  min-height: 2000rpx;
  overflow: hidden;
  display: flex;
}

.tab-item.active {
  position: relative;
}

.tab-item.active:after {
  width: 100%;
  content: "";
  display: block;
  height: 8rpx;
  position: absolute;
  bottom: 0;
  border-bottom: solid 8rpx #fff;
}

.goods-list {
  margin-top: 100rpx;
  width:100%;
  height: 100%;
  display:flex;
  flex-wrap: wrap;
  padding:7rpx;
  justify-content: space-between
}

.good-item {
  background-color: #fff;
  width: 48%;
  height: 100%;
  border-radius: 20rpx;
  margin: 8rpx;
  /* 这里是防止高度不一致导致下方出现空白 */
  /* 这里是防止一开始图片没有加载的时候会挤在一块了 */
  min-height: 100%;
  padding: 8rpx;
}

.title{
  font-size: 24rpx;
  padding-left: 8rpx;
}
.price{
  color: #e9612b;
  font-size: 24rpx;
  padding-left: 8rpx;
}
.price .now{
  font-size: 32rpx;
}
.goodsItem>image {
  width: 100%;
}

.goodsItem>view {
  font-size: 14rpx;
  padding: 5rpx;
}

.goodsItem>.info {
  background-color: #ddd;
}

.info>view {
  padding: 5rpx;
}
.good-img{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 14rpx auto;
}
.good-img image{
  width: 300rpx;
  height: 300rpx;
}
