/* pages/tabBar/cart/cart.wxss */
/* 无产品 */
button{
  border-radius: 0;
}
button::after{
  border: none;
}

.payAll {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  z-index: 9999;
}

.carPay {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
}

page .tabBar {
  background: #f3f3f7;
}

.carPauLabel {
  width: 155rpx;
  float: left;
  /* display: block; */
  text-align: right;
  font-size: 30rpx;
  color: #333;
  display: flex;
  align-items: center;
}
.carPauLabel image {
  width: 45rpx;
  height: 45rpx;
  margin-left: 20rpx;
}

.carPayM {
  font-size: 36rpx;
  color: #333;
  width: 277rpx;
  float: left;
  margin-left: 70rpx;
  line-height: 70rpx;
  padding-top: 15rpx;
  box-sizing: border-box;
}

.carPaySmall {
  font-size: 22rpx;
}

.carPayBtn {
  width: 247rpx;
  height: 100%;
  text-align: center;
  font-size: 36rpx;
  color: #28221f;
  background: #e9d6b2;
  padding-left: 0;
  padding-right: 0;
  float: right;
  border-radius: 0;
}

/*  */
.cart-products{
  width: 100%;
  height: 100%;
}
.cart-list{
  width: 100%;
}
.cart-box{
  height: 180rpx;
  background-color: #fff;
  margin: 1rpx 20rpx;
  margin-top: 20rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  /* justify-content: center;
  align-items:center; */
}
.cart-check{
  border: solid 1rpx #666;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  line-height: 60rpx;
  background-color: #f9f9f9;
  margin: 0 14rpx;
  display: flex;
  justify-content: center;
  align-items:center;
}
.picker {
  float: left;
  text-align: center;
  width: 57rpx;
}
.cart-img{
  width: 20%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cart-img image{
  background-color: #333;
  width: 100%;
  height: 100%;
  display: flex;
}
.cart-info{
  font-size: 24rpx;
  width: 50%;
  padding-left: 20rpx;
  display: flex;
  flex-flow: column;
  justify-content: space-between;
  margin: 14rpx auto;
}
.cart-number{
  width: 100rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
}
.cart-good-edit{
  width: 20%;
  position: relative;
}
.cart-delete{
  width: 60rpx;
  height: 60rpx;
  display: flex;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}
.cart-delete image{
  width: 100%;
  height: 100%;
}
.cart-price{
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}
