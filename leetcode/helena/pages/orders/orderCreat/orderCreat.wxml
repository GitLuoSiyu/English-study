      <view class="order-sum order-card">
        <view class="order-sum-title">应付金额：</view>
        <view class="order-sum-price">￥720</view>
      </view>
      <view class="message order-card">买家留言:</view>
      <textarea class="message-box" placeholder="请输入您的订单留言">
        
