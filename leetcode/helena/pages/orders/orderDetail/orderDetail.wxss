/* pages/orders/orderDeatil/orderDetail.wxss */
.order-box{
  height: 100%;
  padding: 20rpx;
  margin: 20rpx;
  border-radius: 14rpx;
  background-color: #fff;
}

.order-detail{
  margin: 20rpx;
  padding: 10rpx;
  border-radius: 14rpx;
  background-color: #fff;
}

.order-title{
  display: flex;
  justify-content: space-between
}
.order-status{
  font-size: 32rpx;
  color: #111;
}
.order-notice{
  color: #999;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.empty{
  width: 100%;
  content: "";
  display: block;
  height: 1rpx;
  bottom: 0;
  border-bottom: solid 1rpx #f5f5f5;
}

.order-num{

}
.order-id{

}
.order-time{

}
.order-price{
  display: flex;
  justify-content: space-between;
}
.order-info{
  height: 180rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 10rpx auto;
}
.order-img{
  width: 160rpx;
  height: 160rpx;
  background-color: #fff;
  border: solid 1rpx #f5f5f5
}
.order-img image{
  width: 100%;
  height: 100%;
  display: flex;
}
.order-info-title{
  font-size: 28rpx;
  color: #333;
}
.order-price-info{
  height: 180rpx;
  width: 200rpx;
  padding-top: 10rpx;
}
.order-price-num{
  font-size: 34rpx;
  text-align: right;
}

