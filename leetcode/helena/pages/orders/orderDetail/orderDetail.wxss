}
.order-time{

}
.order-price{
  padding: 10rpx;
  color: #333;
  font-size: 32rpx;
}
.gift-info{
  height: 180rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 10rpx auto;
}
.order-warn{
  color: #999;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  margin: 40rpx;
  text-align: center;
}